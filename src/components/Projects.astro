---
import ReactIcon from '../icons/ReactIcon.astro'
import NextIcon from '../icons/NextIcon.astro'
import CssIcon from '../icons/CssIcon.astro'
import DjangoIcon from '../icons/DjangoIcon.astro'

const TAGS = {
  REACT: {
    name: 'React',
    style: { background: '#003159', color: 'white' },
    icon: ReactIcon
  },
  NEXT: {
    name: 'Next.js',
    style: { background: 'black', color: 'white' },
    icon: NextIcon
  },
  CSS: {
    name: 'CSS',
    style: { background: '#2163AF', color: 'white' },
    icon: CssIcon
  },
  DJANGO: {
    name: 'Django',
    style: { background: '#082E21', color: 'white' },
    icon: DjangoIcon
  }
}

const PROJECTS = [
  {
    title: 'SICODI - SI para gestión de procesos en un juzgado',
    description: 'Sistema de información web para la gestión de procesos disciplinarios. Aplicación realizada para una oficina de control disciplinario interno o juzgado.',
    link: '',
    github: '',
    image: '/projects/sicodi.webp',
    tags: [TAGS.REACT, TAGS.CSS, TAGS.DJANGO],
    collaborators: ''
  },
  {
    title: 'Mande - Sistema para gestión de gastos personales',
    description: 'Aplicación web para gestión de gastos personales. La aplicación divide gastos entre un grupo de personas, permite la creación de eventos y la distribución de gastos en la misma. Lleva un contros de pagos y deudas.',
    link: '',
    github: '',
    image: '/projects/mande.webp',
    tags: [TAGS.NEXT, TAGS.CSS],
    collaborators: 'Camilo Santa'
  }
]
---

<div class='my-projects'>
  {
    PROJECTS.map(({ title, description, link, github, image, tags, collaborators }) => (
      <div class='project'>
        <div class='project-image'>
          <img src={image} alt='Project image' />
        </div>
        <div class='project-content'>
          <h3>{title}</h3>
          <div class='tags'>
            <ul>
              {
                tags.map((tag) => (
                  <li>
                    <span style={tag.style}>
                      <tag.icon />
                      {tag.name}
                    </span>
                  </li>
                ))
              }
            </ul>
          </div>
          <p>{description}</p>
        </div>
      </div>
    ))
  }
</div>

<style>
  .my-projects {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .project {
    width: 100%;
    display: flex;
    align-items: start;
    gap: 30px;
  }

  .project-image {
    width: 50%;
    height: 230px;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.144);
    overflow: hidden;
    transition: border .3s ease;
  }

  .project-image:hover {
    border: 1px solid rgba(255, 255, 255, 0.26);
  }

  .project-image:hover img {
    transform: scale(1.02);
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-position: 0;
    object-fit: cover;
    transition: all .3s ease;
  }

  .project-content {
    width: 50%;
  }

  .project-content h3 {
    margin: 0;
    font-size: 1.5rem;
  }

  .project-content p {
    font-size: 1rem;
    color: rgb(136, 136, 136);
    font-weight: 400;
  }

  .tags {
    padding-top: 10px;
    display: flex;
  }

  .tags ul {
    padding: 0;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .tags ul li {
    list-style: none;
  }

  .tags ul li span {
    padding: 2px 10px;
    border-radius: 10px;
    font-size: 0.7rem;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  @media (max-width: 1024px) {
    .project {
      flex-direction: column;
      align-items: center;
    }

    .project-image {
      width: 100%;
      height: 350px;
    }

    .project-content {
      width: 100%;
    }
  }

  @media (max-width: 640px) {
    .project-image {
      height: 230px;
    }
  }
</style>