    <SectionContainer id='resume'>
      <TitleSection>
        <Briefcase />
        Mi curr√≠culum
      </TitleSection>
      <Curriculum />
    </SectionContainer>
    <SectionContainer id='projects'>
      <TitleSection>
        <CodeIcon />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>
    <SectionContainer id='about'>
      <TitleSection>
        <AboutIcon />
        Sobre m√≠
      </TitleSection>
      <About />
    </SectionContainer>
    <SectionContainer id='contact' />
    <BtnGoTop />
    <span class='rights'
      >@2025. Derechos para
      <a
        href='https://www.youtube.com/@midudev'
        target='_blank'>midudev
      </a>
      . Gracias midu ü§ç.
      </span
    >
  </main>
</Layout>

<style>
  main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .rights {
    margin-bottom: 5px;
    font-size: .8rem;
    font-weight: 200;
  }

  .rights a {
    color: rgb(236, 213, 1);
    text-decoration: none;
    font-weight: bold;
  }
