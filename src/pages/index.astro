<style>
  main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  h1 {
    width: fit-content;
    margin: 0;
    color: white;
    font-weight: bold;
    font-size: 2.8em;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 20px;
  }

  p {
    max-width: 60%;
    padding-top: 10px;
    font-size: 1.2em;
    font-weight: normal;
    opacity: 0.8;
  }

  a {
    width: fit-content;
    text-decoration: none;
    display: flex;
  }

  .section1 {
    width: 50%;
    padding-top: 200px;
  }

  img {
    padding-bottom: 10px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }

	.info-links {
    width: 100%;
		display: flex;
    flex-wrap: wrap;
		gap: 10px;
	}

  @media (max-width: 1080px) {
    .section1 {
      width: 60%;
    }
  }

  @media (max-width: 1000px) {
    .section1 {
      width: 70%;
    }
  }

	@media (max-width: 600px) {
    .section1 {
      width: 90%;
    }

    p {
      max-width: 100%;
    }
  }
</style>